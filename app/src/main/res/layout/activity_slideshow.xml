<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@color/white"
        android:elevation="4dp"
        android:layout_margin="16dp"
        android:backgroundTint="@color/white"
        android:clipToPadding="false"
        app:cornerRadius="8dp">

        <!-- Numele bazei sportive -->
        <TextView
            android:id="@+id/baseName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Numele Bazei Sportive"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_marginBottom="8dp" />

        <!-- Slideshow-ul -->
        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="16dp" />

        <!-- Descrierea bazei sportive -->
        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Descrierea bazei sportive."
            android:textSize="16sp"
            android:layout_marginBottom="8dp"
            android:textColor="@color/gray_dark" />

        <!-- Adresa bazei sportive -->
        <TextView
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Adresa: Strada Exemplu, Nr. 10, Oradea"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"
            android:textColor="@color/gray_dark" />

        <!-- Numărul de telefon al bazei sportive -->

        <!-- Rating-ul bazei sportive -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp"
            android:gravity="center_vertical">

            <RatingBar
                android:id="@+id/ratingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:numStars="1"
                android:progressTint="#FFC107"
                android:rating="1"
                android:stepSize="1"
                android:scaleX="1"
                android:scaleY="1" />

            <TextView
                android:id="@+id/ratingText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4.5"
                android:textSize="16sp"
                android:textColor="@color/gray_dark" />
        </LinearLayout>

        <!-- Prețul pe oră -->
        <TextView
            android:id="@+id/hourlyRate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Preț pe oră: 50 RON"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"
            android:textColor="@color/gray_dark" />

        <!-- Butonul INCHIRIAZĂ -->
        <Button
            android:id="@+id/rentButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/round_button"
            android:text="SUNĂ PENTRU A ÎNCHIRIA"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:elevation="4dp"
            android:padding="12dp"
            android:backgroundTint="@color/primary_color"
            app:cornerRadius="24dp"/>
    </LinearLayout>
</ScrollView>
