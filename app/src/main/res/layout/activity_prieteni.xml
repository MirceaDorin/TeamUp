<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/background_light">

    <!-- Toolbar personalizată -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#0E1E5B"
        android:elevation="4dp">

        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Prieteni"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_gravity="center"/>
    </androidx.appcompat.widget.Toolbar>

    <!-- Titlu pentru lista de prieteni -->
    <TextView
        android:id="@+id/friendsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="Prieteni"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#0E1E5B"
        android:paddingBottom="8dp"/>

    <!-- RecyclerView pentru lista de prieteni -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/friendsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="8dp"
        android:clipToPadding="false"
        android:background="@drawable/rounded_corners_background"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"/>

    <!-- Titlu pentru lista de sugestii de prieteni -->
    <TextView
        android:id="@+id/suggestionsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sugestii de prieteni"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#0E1E5B"
        android:padding="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="8dp"/>

    <!-- RecyclerView pentru lista de sugestii de prieteni -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/suggestionsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="8dp"
        android:clipToPadding="false"
        android:background="@drawable/rounded_corners_background"
        android:layout_marginBottom="16dp"/>

    <!-- Butoane de navigare inferioară -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="24dp">

        <LinearLayout
            android:id="@+id/homebtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/imageView40"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="8dp"
                android:contentDescription="Home"
                app:srcCompat="@drawable/homeicon" />

            <TextView
                android:id="@+id/textView39"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Acasa"
                android:textAlignment="center" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/mesajebtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/imageView65"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="8dp"
                android:contentDescription="Messages"
                app:srcCompat="@drawable/messageic" />

            <TextView
                android:id="@+id/textView38"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mesaje"
                android:textAlignment="center" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/profilebtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/imageView25"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="8dp"
                android:contentDescription="Profile"
                app:srcCompat="@drawable/profile_icon" />

            <TextView
                android:id="@+id/textView18"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Profil"
                android:textAlignment="center" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/settingsbtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/imageView52"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="8dp"
                android:contentDescription="Settings"
                app:srcCompat="@drawable/seticon" />

            <TextView
                android:id="@+id/textView51"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Setari"
                android:textAlignment="center" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
